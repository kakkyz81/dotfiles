# 位置
alignment bottom_left
background no
border_width 1
cpu_avg_samples 2
# ちらつき対策
double_buffer yes
own_window yes
own_window_class Conky
# normalにしないとdesktopクリック時に消える
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_transparent yes

default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
override_utf8_locale yes
# xftfont DejaVu Sans Mono:size=10
xftfont TakaoGothic:size=10
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
max_user_text 30000
#max_text_width 30000
# execiの戻り値が長い時(task list)
text_buffer_size 10000
# 配置
gap_x 1630
gap_y 24
minimum_size 5 5
#maximum_width 1900
#-----------------------------------------------------------------------------------
TEXT
${color grey}Name                PID   CPU%   MEM%
${color} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color} ${top name 5} ${top pid 5} ${top cpu 4} ${top mem 5}
${color grey}Processes:$color $processes     ${color grey}Running:$color $running_processes
${color grey}Load Average: ${alignr}${color}${loadavg}
${color grey}File systems: ${alignr}$color${fs_used /}/${fs_size /}
${font 14}${alignr}${time} ${font}
